<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombrePosada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:padding="10dp"

            android:text="nombre posada"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageView

            android:id="@+id/fotoPosada"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/posadahotelgio1"

            app:layout_constraintTop_toBottomOf="@id/nombrePosada"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/precioPosada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fotoPosada"

            android:padding="10dp"

            android:text="Precio Posada"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/infPosada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/precioPosada"

            android:padding="1dp"

            android:textStyle="italic"
            android:text="Inf Posada"
            android:textSize="20sp"
            android:textColor="@color/black" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infPosada"
            card_view:layout_constraintHorizontal_bias="1"
            android:padding="10dp"
            android:textAlignment="viewEnd"

            android:text="ver mas+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>