<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nombreVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:padding="10dp"

            android:text="nombre visitar"
            android:textStyle="bold"

            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageView

            android:id="@+id/fotoVisita"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:src="@drawable/rutasantamonica"

            app:layout_constraintTop_toBottomOf="@id/nombreVisita"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/precioVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fotoVisita"

            android:padding="1dp"

            android:text="Precio Visitar"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/infVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/precioVisita"

            android:padding="1dp"

            android:textStyle="italic"
            android:text="Inf Visitar"
            android:textSize="20sp"
            android:textColor="@color/black" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infVisita"
            card_view:layout_constraintHorizontal_bias="1"
            android:padding="10dp"
            android:textAlignment="viewEnd"

            android:text="ver mas+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>